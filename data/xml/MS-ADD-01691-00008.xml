                                <name type="person" role="aut" key="local_00299 VIAF_266223825">
                                    <persName xml:lang="san" type="standard">Unknown</persName>
                                </name>
                            </author>
                            <title xml:lang="san">Catuṣpīṭhatantra</title>
                            <!--the following elements are optional, delete if not used--><incipit xml:lang="san">
                        <locus from="Xr" to="Xr">[Xr1]</locus> yasarājate |
                                sarvvasilpakalābhijñaḥ | ekapannāprabhāśvaraḥ | kulāsīdanityacintya |</incipit>
                            <explicit xml:lang="san">
                        <locus from="Zv" to="Zv">[Zv6]</locus> poṣādikramam āditya sa tu yonantu uttare
                                diśaddhiguṇacatvāradinānipāṭikasvapaḥ 
                                daśabhṛkaṣasvānārajanīṣyaṭimāra¦</explicit>
                            <textLang mainLang="san">Sanskrit.</textLang>
                        </msItem>
                    </msContents>
